{
	"name": "pldr-gallery",
	"version": "1.0.0",
	"description": "Standalone Node.js Express application for nice and quick browsing your multimedia files.",
	"main": "index.js",
	"scripts": {
		"preversion": "npm test",
		"postinstall": "node postinstall.js",
		"start": "node index.js",
		"test": "mocha --exit --delay"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/DJTommek/pldr-gallery/"
	},
	"author": "Tomas Palider <tomas@palider.cz>",
	"license": "GNU General Public License v3.0",
	"homepage": "https://github.com/DJTommek/pldr-gallery/",
	"dependencies": {
		"archiver": "^5.3.0",
		"body-parser": "latest",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.5",
		"exif-parser": "https://github.com/DJTommek/exif-parser.git",
		"express": "^4.17.1",
		"globby": "^11.0.3",
		"google-auth-library": "^7.0.3",
		"knex": "^0.95.2",
		"less-middleware": "^3.1.0",
		"lodash.merge": "^4.6.2",
		"node-pldr-utils": "git+https://github.com/DJTommek/node-pldr-utils.git",
		"readdirp": "^3.6.0",
		"server-timing": "^3.3.1",
		"sha1": "^1.1.1",
		"sharp": "^0.27.2",
		"sqlite3": "^5.0.2",
		"terser": "^4.6.4"
	},
	"devDependencies": {
		"mocha": "^8.3.2"
	},
	"nodemonConfig": {
		"ignore": [
			".git",
			"node_modules/*",
			"demo/*",
			"test/*",
			"data/log/*",
			"data/log-test/*",
			"data/tokens/*",
			"temp/*",
			"src/webserver/public/js/modules.min.js"
		],
		"watch": [
			"*.js",
			"*.less",
			"src/webserver/private/index.html"
		],
		"ext": "js,less"
	}
}
